
<h2>修改头像</h2>
<%=image_tag @user.avatar.url(:medium), :alt=>'当前头像'%>
<%= form_for @user, :html => {:multipart => true } do |f|%>
  <p>
    <%= f.label :avatar, '选取头像（200x200，文件大小不得超过2M）' %><br/>
    <%= f.file_field :avatar %>
  </p>
  <p><%= f.submit '上传' %></p>

<h2>修改邮箱</h2>

<p><%=f.label :email %><br/>
<%= f.text_field :email%><%= @user.pending? ? '未激活' : '<span style="color:green">已激活</span>' %><br/>
<span style="color: red"><%= @user.errors[:email] %></span>
</p>
<p><%= f.submit '修改' %></p>
<% end %>
